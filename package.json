{
  "name": "@maeertin/medialoaded",
  "version": "2.0.0",
  "private": false,
  "author": "Martin Barri <maeertin@gmail.com>",
  "description": "A simple utility for checking whether images and/or videos have been loaded.",
  "main": "build/index.umd.js",
  "module": "build/index.es5.js",
  "types": "build/index.d.ts",
  "keywords": [
    "images",
    "video",
    "poster",
    "media",
    "loaded"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/maeertin/mediaLoaded.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maeertin/mediaLoaded/issues"
  },
  "scripts": {
    "release": "npm publish --tag latest",
    "release:dry-run": "npm publish --dry-run",
    "build": "tsc && tsc --outDir build/es && rollup -c rollup.config.ts --configPlugin typescript --bundleConfigAsCjs",
    "prepare": "yarn build",
    "prebuild": "rimraf build"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "rollup": "^3.2.3",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "typescript": "^4.8.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
